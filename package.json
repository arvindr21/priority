{
    "name": "priority",
    "version": "1.0.0",
    "description": "An Eisenhower Matrix implementation for productivity",
    "keywords": [
        "Eisenhower",
        "Matrix",
        "productivity",
        "desktop",
        "svelte",
        "electron"
    ],
    "repository": "https://github.com/arvindr21/priority",
    "license": "MIT",
    "author": "Arvind Ravulavaru <arvind.ravulavaru@gmail.com>",
    "main": "src/index.js",
    "scripts": {
        "format": "prettier . --write",
        "lint": "npm-run-all --parallel lint:*",
        "lint:formatting": "prettier . --check",
        "lint:js": "eslint .",
        "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
        "lint:sass": "stylelint src/**/*.scss --fix",
        "make": "ELECTRON_MIRROR=https://cdn.npm.taobao.org/dist/electron/ electron-forge make",
        "package": "electron-forge package",
        "publish": "electron-forge publish",
        "start": "concurrently \"npm:svelte-dev\" \"electron-forge start\"",
        "svelte-build": "rollup -c",
        "svelte-dev": "rollup -c -w",
        "svelte-start": "sirv public"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": "eslint --cache --fix",
        "*.scss": "stylelint --cache --fix",
        "*.{css,js,json,md,yml}": "prettier --write"
    },
    "config": {
        "forge": "./forge.config.js"
    },
    "prettier": "@stylelint/prettier-config",
    "dependencies": {
        "electron-log": "^4.2.4",
        "electron-squirrel-startup": "^1.0.0",
        "sirv-cli": "^0.4.4",
        "svelte-local-storage-store": "^0.1.3",
        "svelte-tooltip": "^1.2.0",
        "sveltestrap": "^3.8.1",
        "update-electron-app": "^1.5.0"
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.53",
        "@electron-forge/maker-deb": "^6.0.0-beta.50",
        "@electron-forge/maker-flatpak": "^6.0.0-beta.53",
        "@electron-forge/maker-rpm": "^6.0.0-beta.50",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.50",
        "@electron-forge/maker-zip": "^6.0.0-beta.50",
        "@electron-forge/plugin-auto-unpack-natives": "^6.0.0-beta.53",
        "@electron-forge/publisher-github": "^6.0.0-beta.53",
        "@fortawesome/free-solid-svg-icons": "^5.14.0",
        "@rollup/plugin-commonjs": "^11.0.0",
        "@rollup/plugin-node-resolve": "^7.0.0",
        "@stylelint/prettier-config": "^2.0.0",
        "@stylelint/remark-preset": "^1.0.0",
        "@typescript-eslint/eslint-plugin": "^4.2.0",
        "@typescript-eslint/parser": "^4.2.0",
        "concurrently": "^5.1.0",
        "electron": "8.0.2",
        "electron-reload": "^1.5.0",
        "eslint": "^7.10.0",
        "eslint-plugin-svelte3": "^2.7.3",
        "fa-svelte": "^3.1.0",
        "node-sass": "^4.14.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.1.2",
        "remark-cli": "^8.0.1",
        "rollup": "^1.32.0",
        "rollup-plugin-livereload": "^1.0.0",
        "rollup-plugin-svelte": "^5.0.3",
        "rollup-plugin-terser": "^5.1.2",
        "rollup-plugin-typescript": "^1.0.1",
        "sass": "^1.26.11",
        "stylelint": "^13.7.2",
        "stylelint-config-sass-guidelines": "^7.1.0",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-order": "^4.1.0",
        "svelte": "^3.28.0",
        "svelte-preprocess": "^4.3.2",
        "tslib": "^2.0.1",
        "typescript": "^4.0.3"
    },
    "productName": "Priority"
}